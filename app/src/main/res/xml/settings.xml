	<PreferenceCategory
		android:key="beh"
		android:title="@string/behaviour">
		<CheckBoxPreference
			android:defaultValue="true"
			android:key="sort_recents"
			android:title="Maintain sorted recents" />
		<CheckBoxPreference
			android:defaultValue="true"
			android:key="sort_favorites"
			android:title="Maintain sorted favorites" />
